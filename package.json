{
  "name": "@nanostores/persistent",
  "version": "0.5.2",
  "description": "A tiny persistent store for Nano Stores state manager",
  "keywords": [
    "nano",
    "persistent",
    "react",
    "preact",
    "vue",
    "svelte",
    "store",
    "localStorage",
    "cross-tab"
  ],
  "scripts": {
    "unit": "tsm node_modules/uvu/bin.js . '(atom|map)\\.test\\.ts$' && tsm ./test/ssr.test.ts",
    "test": "c8 yarn unit && eslint . && check-dts && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/persistent",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "peerDependencies": {
    "nanostores": "^0.5.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "c8": "^7.11.0",
    "check-dts": "^0.6.6",
    "clean-publish": "^4.0.0",
    "eslint": "^8.10.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "jsdom": "^19.0.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.5.10",
    "size-limit": "^7.0.8",
    "tsm": "^2.2.1",
    "typescript": "^4.6.2",
    "uvu": "^0.5.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "consistent-return": "off",
      "camelcase": "off"
    },
    "globals": {
      "jsdom": false
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Atom",
      "import": {
        "./index.js": "{ persistentAtom }"
      },
      "limit": "305 B"
    },
    {
      "name": "Map",
      "import": {
        "./index.js": "{ persistentMap }"
      },
      "limit": "437 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
